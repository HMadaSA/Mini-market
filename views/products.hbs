<div class="content">

    <div class="card card-default">
        <div class="card-header card-header-border-bottom d-flex justify-content-between">
            <h2>Products</h2>

            <a href="/new_product" class="btn btn-primary">
                <i class=" mdi mdi-link mr-1"></i> Add Product
            </a>
        </div>

        <div class="card-body">
            <div class="basic-data-table">
                <table id="basic-data-table" class="table nowrap">
                    <thead>
                        <tr>
                            <th>PRODUCT</th>
                            <th>CATEGORY</th>
                            <th>PRICE/FRS</th>
                            <th>QUANTITY</th>
                            <th>SUPPLIER</th>
                            <th>CREATED</th>
                            <th>UPDATE</th>

                        </tr>
                    </thead>

                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{category}}</td>
                            <td>{{price}}</td>
                            <td>{{quantity}}</td>
                            <td>{{supplier}}</td>
                            <td>{{created_at}}</td>
                            <td>
                                <form class="form" method="get" action="/:id">
                                    <input type="hidden" name="id" value="{{id}}"><button
                                        class="btn btn-info">details</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>